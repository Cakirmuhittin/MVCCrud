@using MVC_060223.Classes;
@model FilmDuzenleViewModel
@{
    ViewData["Title"] = "Film Düzenle";
}
<h1>Film Düzenle</h1>

<form asp-controller="Filmler" asp-action="Duzenle" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="mb-2">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Yil"></label>
        <input asp-for="Yil" class="form-control" />
        <span asp-validation-for="Yil" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Puan"></label>
        <input asp-for="Puan" class="form-control" type="text" />
        <span asp-validation-for="Puan" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <div class="row">
            @foreach (Tur tur in ViewBag.Turler)
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-3">
                    <label class="d-flex align-items-center">
                        <input type="checkbox" name="turler" class="me-2" value="@tur.Id" @(Model.Turler.Contains(tur.Id)?"checked":"") />
                        @tur.Ad
                    </label>
                </div>
            }
        </div>
    </div>
    <button class="btn btn-primary">Kaydet</button>
</form>